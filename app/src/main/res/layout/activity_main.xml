<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="283dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="enterAlwaysCollapsed|scroll"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            android:background="@drawable/collapse"
            app:toolbarId="@+id/toolbar"
            app:title="Schemes">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"></androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="915dp"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fcfcfc"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="423dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/yojana1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:id="@+id/yojana"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="176dp"
                            android:layout_height="99dp"
                            android:layout_margin="7dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/rajiv"
                            android:padding="10dp"></ImageView>

                        <TextView
                            android:layout_width="168dp"
                            android:layout_height="62dp"
                            android:layout_marginTop="10dp"
                            android:padding="9dp"
                            android:text="Rajiv Gandhi Jeevandayee Yojana "
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/yojana2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:id="@+id/yojana5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="176dp"
                            android:layout_height="99dp"
                            android:layout_margin="7dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/sanjay"></ImageView>

                        <TextView
                            android:layout_width="168dp"
                            android:layout_height="62dp"
                            android:layout_marginTop="10dp"
                            android:padding="9dp"
                            android:text="Sanjay Niradhar Yojana "
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/yojana3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="20dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:id="@+id/yojana6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="176dp"
                            android:layout_height="99dp"
                            android:layout_margin="7dp"
                            android:layout_marginTop="0dp"
                            android:background="@drawable/sanjay"></ImageView>

                        <TextView
                            android:layout_width="168dp"
                            android:layout_height="62dp"
                            android:layout_marginTop="10dp"
                            android:padding="9dp"
                            android:text="Sanjay Niradhar Yojana "
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </com.google.android.material.circularreveal.coordinatorlayout.CircularRevealCoordinatorLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>